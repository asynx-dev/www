#!/usr/bin/env bash

# This script build the site for publishing.

pipenv install
pipenv run mkdocs build --clean --config-file mkdocs-deploy.yml
touch ./site/.nojekyll
cp CNAME ./site
date -Iseconds >> ./site/build.info.txt
mkdocs --version >> ./site/build.info.txt
git log -1 --oneline >> ./site/build.info.txt
pipenv --rm
